<%= form_with(model: @author, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
  </div>

  <div class="form-group">
    <%= f.label :birth_date %>
    <%= f.text_field :birth_date %>
  </div>

  <div class="form-group">
    <%= f.submit 'Register Author' %>
  </div>

<% end %>